<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1">

    <include
        android:id="@+id/include"
        layout="@layout/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include"
        android:orientation="vertical"
        android:weightSum="8">

        <com.example.a194990.calculator.AutoResizeTextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/include"
            android:layout_weight="2"
            android:background="@android:color/background_light"
            android:freezesText="true"
            android:gravity="bottom|right"
            android:maxLines="2"
            android:text="0"
            android:textSize="150sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/textView"
            android:layout_weight="6"
            android:baselineAligned="false"
            android:weightSum="6">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorOperators"
                    android:onClick="onClickBracket"
                    android:text="("
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    tools:textAllCaps="false" />

                <Button
                    android:id="@+id/button26"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorOperators"
                    android:onClick="onClickOperator"
                    android:text=")"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    tools:textAllCaps="false" />

                <Button
                    android:id="@+id/buttonClear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorRemovals"
                    android:elevation="0dp"
                    android:onClick="onClickClear"
                    android:text="C"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/button22"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2"
                    android:layout_weight="2"
                    android:background="@color/colorRemovals"
                    android:elevation="0dp"
                    android:onClick="onClickBackspace"
                    android:text="del"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    tools:textAllCaps="false" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorOperators"
                    android:onClick="onClickOperator"
                    android:text="^2"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    tools:textAllCaps="false" />

                <Button
                    android:id="@+id/button19"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorOperators"
                    android:onClick="onClickOperator"
                    android:text="^"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    tools:textAllCaps="false" />

                <Button
                    android:id="@+id/buttonDivide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorOperators"
                    android:onClick="onClickOperator"
                    android:text="/"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button24"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorOperators"
                    android:onClick="onClickSqrt"
                    android:text="âˆš"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    tools:textAllCaps="false" />

                <Button
                    android:id="@+id/buttonLN"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorOperators"
                    android:onClick="onClickTrigonometryOrLog"
                    android:text="log"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    tools:textAllCaps="false" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:onClick="onClickNumber"
                    android:text="7"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:onClick="onClickNumber"
                    android:text="8"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:onClick="onClickNumber"
                    android:text="9"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button25"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorOperators"
                    android:onClick="onClickOperator"
                    android:text="*"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button21"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorOperators"
                    android:onClick="onClickTrigonometryOrLog"
                    android:text="sin"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    tools:textAllCaps="false" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:onClick="onClickNumber"
                    android:text="4"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:onClick="onClickNumber"
                    android:text="5"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:onClick="onClickNumber"
                    android:text="6"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button18"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorOperators"
                    android:onClick="onClickOperator"
                    android:text="+"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buttoncos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorOperators"
                    android:onClick="onClickTrigonometryOrLog"
                    android:text="cos"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    tools:textAllCaps="false" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:onClick="onClickNumber"
                    android:text="1"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:onClick="onClickNumber"
                    android:text="2"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:onClick="onClickNumber"
                    android:text="3"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button17"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorOperators"
                    android:onClick="onClickOperator"
                    android:text="-"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorOperators"
                    android:onClick="onClickTrigonometryOrLog"
                    android:text="tan"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    tools:textAllCaps="false" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/buttonComa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:onClick="onClickComma"
                    android:text="."
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:onClick="onClickNumber"
                    android:text="0"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buttonEquals"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="3"
                    android:layout_weight="3"
                    android:background="@color/colorOperators"
                    android:onClick="onClickEqual"
                    android:text="="
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />

            </TableRow>
        </TableLayout>
    </LinearLayout>

</RelativeLayout>
